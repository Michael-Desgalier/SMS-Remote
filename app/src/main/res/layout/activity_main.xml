<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="#000000"
            android:text="" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:text="Status"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/imgGreenStatus1"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginTop="47dp"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"
            android:background="@drawable/img_status_on"/>

        <ImageView
            android:id="@+id/imgGreenStatus2"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginTop="47dp"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"
            android:background="@drawable/img_status_on"/>

        <ImageView
            android:id="@+id/imgGreenStatus3"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginTop="47dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:visibility="invisible"
            android:background="@drawable/img_status_on"/>

        <ImageView
            android:id="@+id/imgRedStatus3"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_marginTop="47dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:visibility="visible"
            android:background="@drawable/img_status_off"/>

        <ImageView
            android:id="@+id/imgRedStatus2"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="47dp"
            android:background="@drawable/img_status_off" />

        <ImageView
            android:id="@+id/imgRedStatus1"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="47dp"
            android:background="@drawable/img_status_off" />

        <TextView
            android:layout_width="200px"
            android:layout_height="120px"
            android:layout_marginLeft="35dp"
            android:text="1"
            android:layout_marginTop="62dp"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

        <TextView
            android:layout_width="200px"
            android:layout_height="120px"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:layout_marginTop="62dp"
            android:text="2"
            android:textSize="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_marginTop="62dp"
            android:layout_marginRight="35dp"
            android:text="3"
            android:textAlignment="textEnd"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

        <ImageButton
            android:id="@+id/btnRefresh"
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="122dp"
            android:text="Refresh"
            android:src="@drawable/button_refresh"
            android:padding="0dp"
            android:background="#00000000"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/refreshText"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="140dp"
            android:text="Last refresh :"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/refreshHour"
            android:layout_width="84dp"
            android:layout_height="40dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="165dp"
            android:text=""
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/refreshDate"
            android:layout_width="84dp"
            android:layout_height="40dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="165dp"
            android:text=""
            android:textSize="15dp"/>

        <ImageButton
            android:id="@+id/btn1Clicked"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="210dp"
            android:src="@drawable/button_clicked"
            android:background="#00000000"
            android:padding="0dp"
            android:visibility="invisible"
            android:scaleType="fitCenter"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="210dp"
            android:text="1"
            android:textSize="30dp"
            android:paddingTop="20dp"
            android:textAlignment="center"
            android:textColor="#000000"/>

        <ImageButton
            android:id="@+id/btn1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="210dp"
            android:src="@drawable/button"
            android:background="#00000000"
            android:padding="0dp"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/whiteBtnNbr1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="210dp"
            android:text="1"
            android:textSize="30dp"
            android:paddingTop="20dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/btnLabel1"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="210dp"
            android:text="Boutton1"
            android:textSize="18dp"
            android:paddingTop="27dp"
            android:textColor="#000000"/>


        <ImageButton
            android:id="@+id/btnReset"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/button_reset"
            android:background="#00000000"
            android:padding="0dp"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/wheel_icon"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="#00000000"
            android:padding="0dp"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/btn2Clicked"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="310dp"
            android:src="@drawable/button_clicked"
            android:background="#00000000"
            android:visibility="invisible"
            android:padding="0dp"
            android:scaleType="fitCenter"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="310dp"
            android:text="2"
            android:textSize="30dp"
            android:paddingTop="20dp"
            android:textAlignment="center"
            android:textColor="#000000"/>

        <ImageButton
            android:id="@+id/btn2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="310dp"
            android:src="@drawable/button"
            android:background="#00000000"
            android:padding="0dp"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/whiteBtnNbr2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="310dp"
            android:text="2"
            android:textSize="30dp"
            android:paddingTop="20dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/btnLabel2"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="310dp"
            android:text="Boutton2"
            android:textSize="18dp"
            android:paddingTop="27dp"
            android:textColor="#000000"/>

        <ImageButton
            android:id="@+id/btn3Clicked"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="410dp"
            android:src="@drawable/button_clicked"
            android:background="#00000000"
            android:visibility="invisible"
            android:padding="0dp"
            android:scaleType="fitCenter"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="410dp"
            android:text="3"
            android:textSize="30dp"
            android:paddingTop="20dp"
            android:textAlignment="center"
            android:textColor="#000000"/>

        <ImageButton
            android:id="@+id/btn3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="410dp"
            android:src="@drawable/button"
            android:background="#00000000"
            android:padding="0dp"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/whiteBtnNbr3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="410dp"
            android:text="3"
            android:textSize="30dp"
            android:paddingTop="20dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/btnLabel3"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="410dp"
            android:text="Boutton3"
            android:textSize="18dp"
            android:paddingTop="27dp"
            android:textColor="#000000"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>